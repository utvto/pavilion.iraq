  <script>
    let cart = [];

    function addToCart(productName) {
      cart.push(productName);
      document.getElementById('cartCount').innerText = cart.length;
      alert(productName + " تم إضافته إلى السلة!");
    }

    function viewCart() {
      if (cart.length === 0) {
        alert("السلة فارغة!");
      } else {
        alert("المنتجات في السلة:\n" + cart.join("\n"));
      }
    }
  </script>
